<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:textSize="18pt"
        android:text="@string/antitheft_screen_name" />

    <Button
        android:id="@+id/button_at"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView2"
        android:layout_marginTop="48dp"
        android:text="@string/antitheft_screen_do_atjob_button" />

    <Button
        android:id="@+id/button_purchase"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_at"
        android:layout_marginTop="24dp"
        android:text="@string/purchase_buy_button" />

    <Button
        android:id="@+id/button_help"
        android:layout_width="148dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_purchase"
        android:layout_marginTop="24dp"
        android:text="@string/antitheft_screen_help_button" />

</RelativeLayout>